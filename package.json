{
  "name": "foundation-server",
  "version": "0.2.5",
  "description": "An extremely efficient, highly scalable, all-in-one, easy to setup cryptocurrency mining pool",
  "main": "./scripts/init.js",
  "keywords": [
    "stratum",
    "mining",
    "pool",
    "server",
    "poolserver",
    "bitcoin",
    "litecoin",
    "scrypt",
    "avian",
    "minotaurx"
  ],
  "homepage": "https://github.com/blinkhash/foundation-server",
  "bugs": {
    "url": "https://github.com/blinkhash/foundation-server/issues"
  },
  "license": "GPL-2.0",
  "author": {
    "name": "Nick Sarris"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "configs/",
      ".mock.js"
    ]
  },
  "scripts": {
    "start": "nodemon scripts/main.js",
    "prod:start": "pm2 start scripts/main.js",
    "prod:stop": "pm2 stop scripts/main.js",
    "prod:logs": "pm2 logs main",
    "prod:update": "pm2 update",
    "clean": "eslint . --ext .js --ignore-pattern node_modules/",
    "clean:fix": "eslint . --ext .js --fix --ignore-pattern node_modules/",
    "test": "jest --coverage",
    "deploy": "npm run clean:fix && npm run test"
  },
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/cdonnachie/foundation-server.git"
  },
  "dependencies": {
    "apicache": "^1.6.3",
    "async": "2.6.3",
    "body-parser": "1.19.1",
    "colors": "1.4.0",
    "compression": "*",
    "cors": "^2.8.5",
    "dateformat": "4.6.3",
    "express": "4.17.2",
    "express-rate-limit": "^5.5.1",
    "foundation-stratum": "0.0.32",
    "nodemon": "2.0.15",
    "pm2": "^5.1.2",
    "redis": "^3.1.1"
  },
  "devDependencies": {
    "codecov": "^3.8.1",
    "eslint": "^7.23.0",
    "jest": "^26.6.3",
    "mockdate": "^3.0.5",
    "nock": "^13.0.10",
    "redis-mock": "^0.56.3"
  },
  "engines": {
    "node": ">=12.16"
  },
  "readmeFilename": "README.md"
}
